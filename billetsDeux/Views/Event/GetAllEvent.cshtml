@model IEnumerable<billetsDeux.Models.EventWeb>

@{
    ViewData["Title"] = "GetAllEvent";
}

<style>
    a{
        margin: 5px;
    }
</style>
<div class="container-fluid">
    <h1>Evenement à venir</h1>

    <div class="row" id="listeEvent">
        @foreach (var item in Model)
        {
            <div class="col-sm-6">
                <div class="eventinfo">
                    <div class="form-group">
                        <a asp-controller="Event" asp-action="Get" asp-route-id="@item.Id">
                            <h2>@Html.DisplayFor(modelItem => item.NomSpectacle)</h2>
                            <img src="~/photo/ImageEvent/@item.Image" />
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>













